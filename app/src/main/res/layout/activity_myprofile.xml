<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gee.screw.MyProfileActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/navigationBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="0dp">

        <ImageButton
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/search" />

        <ImageButton
            android:id="@+id/map_bth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/map" />

        <ImageButton
            android:id="@+id/contact_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/contact" />

        <ImageButton
            android:id="@+id/user_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/up" />

    </android.support.v7.widget.Toolbar>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/user1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/myProfile_nameET"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        android:layout_marginTop="4dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/myNameView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/edit"
        android:clickable="true"
        android:contentDescription="image"
        android:padding="4dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toLeftOf="@+id/myProfile_nameET"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="73dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView2" />

    <TextView
        android:id="@+id/myNameView"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:text="Name: "
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintRight_toLeftOf="@+id/myProfile_majorET"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/myInterstView"
        android:layout_marginTop="13dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/myInterstView"
        app:layout_constraintTop_toTopOf="@+id/myProfile_nameET" />

    <EditText
        android:id="@+id/myProfile_nameET"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Enter Your Full Name"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/myProfile_interestET"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="@+id/myProfile_collegeET"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toRightOf="@+id/myInterstView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/myInterstView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interests: "
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/myProfile_interestET"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/myProfile_interestET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter Your Interest"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="155dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/myInterstView"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/myProfile_interest_tags_TV"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:text="Interest tags"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/myProfile_majorET"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="@+id/myProfile_skillsetET"
        android:layout_marginTop="87dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="87dp"
        app:layout_constraintLeft_toLeftOf="@+id/myInterstView"
        app:layout_constraintTop_toTopOf="@+id/myNameView"
        android:layout_marginRight="1dp" />

    <TextView
        android:id="@+id/mySkillView"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:text="Skillset: "
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintRight_toLeftOf="@+id/myProfile_skillsetET"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/myProfile_skillset_tags_TV"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/myProfile_interest_tags_TV"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/myProfile_interest_tags_TV"
        android:layout_marginRight="2dp" />

    <EditText
        android:id="@+id/myProfile_skillsetET"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Enter Your Skills"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="54dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/mySkillView"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="54dp" />

    <TextView
        android:id="@+id/myProfile_skillset_tags_TV"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:text="Skillset tags"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/navigationBar"
        app:layout_constraintRight_toRightOf="@+id/myProfile_majorET"
        android:layout_marginTop="189dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="189dp"
        app:layout_constraintLeft_toLeftOf="@+id/mySkillView"
        app:layout_constraintTop_toTopOf="@+id/myProfile_nameET"
        android:layout_marginLeft="1dp" />

    <TextView
        android:id="@+id/myCollegeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College:"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/myProfile_skillset_tags_TV"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/myProfile_collegeET"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Optional"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/myProfile_saveBTN"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="@+id/myProfile_majorET"
        app:layout_constraintTop_toBottomOf="@+id/myCollegeView"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="@+id/myProfile_skillsetET"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="4dp" />

    <TextView
        android:id="@+id/myMajorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major: "
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/myCollegeView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/myProfile_majorET"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Optional"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toRightOf="@+id/myProfile_interestET"
        android:layout_marginTop="34dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/myProfile_skillsetET"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/myProfile_collegeET"
        android:layout_marginBottom="37dp"
        app:layout_constraintTop_toTopOf="@+id/myProfile_skillset_tags_TV" />

    <Button
        android:id="@+id/myProfile_saveBTN"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Save"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/navigationBar"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="@+id/myProfile_collegeET"
        android:layout_marginRight="86dp"
        android:layout_marginBottom="0dp" />
</android.support.constraint.ConstraintLayout>
